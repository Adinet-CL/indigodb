{
  "name": "@adinet/indigodb",
  "version": "2.0.0",
  "packageManager": "pnpm@9.5.0",
  "private": true,
  "description": "ORM for PostgreSQL and MongoDB with optional real-time support via WebSockets",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "clean": "rm -rf **/dist",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "turbo:build": "turbo run build",
    "turbo:dev": "turbo run dev",
    "turbo:test": "turbo run test",
    "turbo:clean": "turbo run clean"
  },
  "workspaces": [
    "packages/*",
    "packages/adapters/*"
  ],
  "dependencies": {
    "dotenv": "^16.4.5",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@testcontainers/mongodb": "^10.24.2",
    "@testcontainers/postgresql": "^10.24.2",
    "@types/node": "^20.5.6",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "3.1.2",
    "@vitest/ui": "^3.1.2",
    "execa": "^9.5.2",
    "mongodb-memory-server": "^10.1.4",
    "pg-mem": "^3.0.5",
    "tsup": "^8.4.0",
    "turbo": "^2.5.1",
    "typescript": "^5.3.3",
    "vitest": "^3.1.2"
  }
}
