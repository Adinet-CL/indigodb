{
  "name": "@adinet/indigodb",
  "version": "2.0.0",
  "private": true,
  "description": "ORM for PostgreSQL and MongoDB with optional real-time support via WebSockets",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "clean": "find . -name 'dist' -type d -exec rm -rf {} +",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "turbo:build": "turbo run build",
    "turbo:dev": "turbo run dev",
    "turbo:test": "turbo run test",
    "turbo:clean": "turbo run clean"
  },
  "workspaces": [
    "packages/*",
    "packages/adapters/*"
  ],
  "keywords": [
    "ORM",
    "PostgreSQL",
    "MongoDB",
    "Realtime",
    "WebSocket",
    "Database",
    "Prisma",
    "TypeScript"
  ],
  "author": {
    "name": "Sergio Galaz",
    "email": "sergiogalaz60@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Adinet-CL/indigodb"
  },
  "bugs": {
    "url": "https://github.com/Adinet-CL/indigodb/issues"
  },
  "homepage": "https://github.com/Adinet-CL/indigodb#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "dotenv": "^16.4.5",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.6",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^3.1.2",
    "tsup": "^8.4.0",
    "turbo": "^2.5.1",
    "typescript": "^5.3.3",
    "vitest": "^3.1.2"
  }
}
